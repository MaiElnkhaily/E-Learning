@model IEnumerable<ELearningManagementSystem.Models.Exercise>
@{
    ViewBag.Title = "GetAllExercises";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}


<div id="page-wrapper" onLoad="noBack();" onpageshow="if (event.persisted) noBack();" onUnload="">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row" id="main">
            <div class="col-sm-12 col-md-12 well" id="content">
                <section class="exercise">
                    <h1>EXERCISE DETAILS</h1>
                    <hr>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(ww => ww.Title)</th>
                                <th scope="col">@Html.DisplayNameFor(ww => ww.StartDate)</th>
                                <th scope="col">@Html.DisplayNameFor(ww => ww.EndDate)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>

                                    <td>
                                        @Ajax.ActionLink(item.Title, "questions", new { Title = item.Title, c_id = item.Course_Code }, new AjaxOptions
                                        {

                                   HttpMethod = "get",

                                   InsertionMode = InsertionMode.Replace,

                                   UpdateTargetId = "content"

                               })
                                </td>
                                <td>@Html.DisplayFor(ww => item.StartDate)</td>
                                <td>@Html.DisplayFor(ww => item.EndDate)</td>
                            </tr>
                        }

                        </tbody>
                    </table>
                </section>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

@section scris{

    <script type="text/javascript">
        window.history.forward();
        function noBack() {
            window.history.forward();
        }
    </script>

}