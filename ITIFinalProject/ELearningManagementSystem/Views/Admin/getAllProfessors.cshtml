@model IEnumerable<ELearningManagementSystem.Models.Professor>
@{
    ViewBag.Title = "getAllProfessors";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-sm-12 col-md-12 well" id="content" onLoad="noBack();" onpageshow="if (event.persisted) noBack();" onUnload="">
    <!--Table -->
    <section class="doctor">
        <h1>All Professors</h1>
        <hr>
        <table class="table table-hover table-bordered">

            <tr>

                <td style="background-color:#9B0000; color:white; font-weight:bold; text-align:center"> Name</td>
                <td style="background-color:#9B0000; color:white; font-weight:bold; text-align:center"> E-mail</td>
                <td style="background-color:#9B0000; color:white; font-weight:bold; text-align:center"> Username</td>
                <td style="background-color:#9B0000; color:white; font-weight:bold; text-align:center"> Department</td>
                <td style="background-color:#9B0000; color:white; font-weight:bold; text-align:center"></td>
            </tr>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@Html.DisplayFor(w => item.PersonalName)</td>
                        <td>@Html.DisplayFor(w => item.E_Mail)</td>
                        <td>@Html.DisplayFor(w => item.UserName)</td>
                        <td>@Html.DisplayFor(w => item.Department.DeptName)</td>
                        <td>
                            @Html.ActionLink("Edit", "EditProfessor", "admin", routeValues: new { id = item.Prof_Id }, htmlAttributes: new { @class = "btn btn-info" })|
                            @Html.ActionLink("Delete", "Deleteprofessor", "admin", routeValues: new { id = item.Prof_Id }, htmlAttributes: new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this professor ?!')" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- end Table-->
        <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-lg-12 col-md-8">
                @*<a href="admin-newprofessor.html">
                        <input type="button" class="btn btn-primary" value="Add new professor">
                    </a>*@
                @Html.ActionLink("Add new professor", "Addprofessor", "admin", routeValues: new { }, htmlAttributes: new { @class = "btn btn-primary" })
                <!-- <span></span>
                <a href="admin-editcourses.html"><input type="reset" class="btn btn-primary" value="Update course"></a>-->
            </div>
        </div>
    </section>
</div>


@section script{

    <script type="text/javascript">
        window.history.forward();
        function noBack() {
            window.history.forward();
        }
    </script>

}