@model IEnumerable<ELearningManagementSystem.Models.Student>
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper" onLoad="noBack();" onpageshow="if (event.persisted) noBack();" onUnload="">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row" id="main">
            <div class="col-sm-12 col-md-12 well" id="content">
                <!--Table -->
                <section class="student">
                    <h1>All Students</h1>
                    <hr>
                    <table class="table table-hover table-bordered table-dark text-center ">
                        <thead class="thead-dark">
                            <tr>
                                @*<th style="background-color:darkred; color:white; " class="text-center"> ID</th>*@
                                <th style="background-color:darkred; color:white; " class="text-center"> Name</th>
                                <th style="background-color:darkred; color:white; " class="text-center"> E-mail</th>
                                <th style="background-color:darkred; color:white; " class="text-center"> Username</th>
                                <th style="background-color:darkred; color:white; " class="text-center"> Dept</th>
                                <th style="background-color:darkred; color:white; " class="text-center" id="empty">Edit / Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td style="vertical-align:middle">@Html.DisplayFor(w => item.Student_Code)</td>*@
                                    <td style="vertical-align:middle">@Html.DisplayFor(w => item.Personal_Name)</td>
                                    <td style="vertical-align:middle">@Html.DisplayFor(w => item.E_Mail)</td>
                                    <td style="vertical-align:middle">@Html.DisplayFor(w => item.UserName)</td>
                                    <td style="vertical-align:middle">@Html.DisplayFor(w => item.Department.DeptName)</td>
                                    <td style="vertical-align:middle">
                                        @Html.ActionLink("Edit", "EditStudent", routeValues: new { id = item.Student_Code }, htmlAttributes: new { @class = "btn btn-info", @id = "edit" })
                                        @Html.ActionLink("Delete", "DelStudent", routeValues: new { id = item.Student_Code }, htmlAttributes: new { @class = "btn btn-danger", @id = "delete", onclick = "return confirm('are you sure you want to delete this exercise?!!')" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- end Table-->
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="col-lg-12 col-md-8">
                            @Html.ActionLink("Add New Student", "Add_Student", "Admin", htmlAttributes: new { @class = "btn btn-primary" })
                            @*<a href="admin-addstudent.html"><input type="button" class="btn btn-primary" value="Add new student" id="new"></a>*@
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <!-- /#page-wrapper -->
</div>

@section script{

    

        <script type="text/javascript">
        window.history.forward();
        function noBack() {
            window.history.forward();
        }
        </script>


}