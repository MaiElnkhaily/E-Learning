@model ELearningManagementSystem.Models.MCQ
@{
    ViewBag.Title = "addQuestionsMCQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper" onLoad="noBack();" onpageshow="if (event.persisted) noBack();" onUnload="">

    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row" id="main">
            <div class="col-sm-12 col-md-12 well" id="content">
                <section class="exercise">
                    <h1>ADD NEW EXERCISE</h1>
                    <hr>
                    <form action="/professor/addQuestionsMCQ" method="post">


                        <div class="form-group">
                            <label for="exampleInputQuestion">The Question:</label>
                            @*<input type="text" class="form-control" id="exampleInputQuestion"
                                placeholder="Enter Question">*@
                            @Html.TextBoxFor(ww => ww.Question, new { @class = "form-control", @placeholder = "Enter Question", required = "required" })
                        </div>
                        <hr>

                        <div class="form-row">
                            <div class="col-md-6 mb-3">
                                <label for="inputAnswer1">Answer1:</label>
                                @Html.TextBoxFor(ww => ww.Choice1, new { @class = "form-control ch", @placeholder = "Enter Answer1", required = "required", onchange = "addValueToRadioBtn();" })

                                @*<input type="text" class="form-control" id="inputAnswer1" placeholder="Enter answer1">*@

                            </div>

                            <div class="col-md-3 mb-3" style="margin-top: 30px;">
                                @*<input type="checkbox" class="custom-control-input" id="customControlInline"
                                    checked>*@
                                @Html.RadioButtonFor(ww => ww.CorrectAnswer, "", new { @class = "correct", value = "" })

                                <label class="custom-control-label" for="customControlInline">Is true</label>
                            </div>
                        </div>

                        <br>

                        <div class="form-row" style="margin-top: 50px;">
                            <div class="col-md-6 mb-3">
                                <label for="inputAnswer2">Answer2:</label>
                                @*<input type="text" class="form-control" id="inputAnswer2"  placeholder="Enter answer2">*@
                                @Html.TextBoxFor(ww => ww.Choice2, new { @class = "form-control ch", @placeholder = "Enter Answer1", required = "required", onchange = "addValueToRadioBtn();" })

                            </div>

                            <div class="col-md-3 mb-3" style="margin-top: 30px;">
                                @*<input type="checkbox" class="custom-control-input" id="customControlInline">*@
                                @Html.RadioButtonFor(ww => ww.CorrectAnswer, "", new { @class = "correct", value = "" })

                                <label class="custom-control-label" for="customControlInline">Is true</label>
                            </div>
                        </div>

                        <br>

                        <div class="form-row" style="margin-top: 50px;">
                            <div class="col-md-6 mb-3">
                                <label for="inputAnswer3">Answer3:</label>
                                @*<input type="text" class="form-control" id="inputAnswer3"  placeholder="Enter answer3">*@
                                @Html.TextBoxFor(ww => ww.Choice3, new { @class = "form-control ch", @placeholder = "Enter Answer1", required = "required", onchange = "addValueToRadioBtn();" })

                            </div>

                            <div class="col-md-3 mb-3" style="margin-top: 30px;">
                                @*<input type="checkbox" class="custom-control-input" id="customControlInline">*@
                                @Html.RadioButtonFor(ww => ww.CorrectAnswer, "", new { @class = "correct", value = "" })

                                <label class="custom-control-label" for="customControlInline">Is true</label>
                            </div>
                        </div>

                        <br>

                        <div class="form-row" style="margin-top: 50px;">
                            <div class="col-md-6 mb-3">
                                <label for="inputAnswer4">Answer4:</label>
                                @*<input type="text" class="form-control" id="inputAnswer4"  placeholder="Enter answer4">*@
                                @Html.TextBoxFor(ww => ww.Choice4, new { @class = "form-control ch", @placeholder = "Enter Answer1", required = "required", onchange = "addValueToRadioBtn();" })

                            </div>

                            <div class="col-md-3 mb-3" style="margin-top: 30px;">
                                @*<input type="checkbox" class="custom-control-input" id="customControlInline">*@
                                @Html.RadioButtonFor(ww => ww.CorrectAnswer, "", new { @class = "correct", value = "" })
                                <label class="custom-control-label" for="customControlInline">Is true</label>
                            </div>
                        </div>
                        <section>
                            <a href="/professor/SaveCahnges" class="btn btn-success" @*style="margin-top:200px"*@ style="margin-top:100px">Save</a>
                            <input type="submit" class="btn btn-warning" value="New Question" @*style="margin-top:-35px"*@ style="margin-top:-150px">
                        </section>


                    </form>
                </section>
                <br>
                <br>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->



@section scripts{

    <script>
        function addValueToRadioBtn() {

            var rads = document.getElementsByClassName("correct");
            for (var i = 0; i < rads.length; i++) {
                (function (index) {

                    rads[index].addEventListener("click", function () {

                        var txts = document.getElementsByClassName("ch");
                        rads[index].value = txts[index].value;
                    })
                })(i);
            }

        }
    </script>

    <script type="text/javascript">
        window.history.forward();
        function noBack() {
            window.history.forward();
        }
    </script>

}
